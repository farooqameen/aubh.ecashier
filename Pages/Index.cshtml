<div class="container">
    <form method="post">
        <div class="card my-3">
            <h6 class="font-weight-bold card-header">
                Customer Information
            </h6>
            <div class="card-body row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3 col">
                    <label for="fname">First name:</label>
                    <input id="fname" class="form-control" asp-for="Customer.FirstName" />
                    <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3 col">
                    <label for="lname">Last name:</label>
                    <input id="lname" class="form-control" asp-for="Customer.LastName" />
                    <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @* make sure to change id and asp-for, not properly set *@
                    <label for="sid">Student ID:</label>
                    <input id="sid" class="form-control" asp-for="Customer.LastName" />
                    <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="email">Email:</label>
                    <input id="email" class="form-control" asp-for="Customer.Email" />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Phone:</label><br />
                    <input class="form-control" id="phone" asp-for="Customer.Telephone" />
                    <span asp-validation-for="Customer.Telephone" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <div class="mb-3">

                    <!--<label for="item">Select an item: </label>-->
                    @* <div>
                    @Html.DropDownListFor(Model => Model.InventoryItem, new SelectList(Model.InventoryItem, "ID", "Name"))
                    </div> *@

                    @* Missing asp-for field
                    <select class="form-select" asp-items=@(new SelectList(Model.InventoryItem, "Id", "Name"))></select> *@

                    <label asp-for="Item.CategoryId" class="control-label">Select an item:</label>
                    <select asp-for="Item.CategoryId" class="form-control" asp-items="ViewBag.ItemId"></select>
                </div>
                <div class="mb-3">
                    <label for="note">Note:</label>
                    <textarea id="note" name="note" class="form-control" asp-for="Customer.Notes"></textarea>
                    <span asp-validation-for="Customer.Notes" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex justify-content-start">
                    <input type="submit" value="Chekout" class="btn btn-success" />
                </div>

            </div>
        </div>
    </form>
</div>

