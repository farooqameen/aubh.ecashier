@page
@model eCashier.Pages.ItemPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <h3 class="card-header">Index</h3>
    <div class="card-body">
        <a class="btn btn-success mb-3" asp-page="Create">New item</a>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].SKU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Tax)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].NotificationEmails)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].InternalDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].AllowAnyPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].IsVisible)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SKU)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tax)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NotificationEmails)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InternalDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AllowAnyPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsVisible)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
