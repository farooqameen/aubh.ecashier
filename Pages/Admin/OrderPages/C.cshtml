<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.CustomerId" class="control-label"></label>
                <select asp-for="Order.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Order.Reference" class="control-label"></label>
                <input asp-for="Order.Reference" class="form-control" />
                <span asp-validation-for="Order.Reference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ExpiryDate" class="control-label"></label>
                <input asp-for="Order.ExpiryDate" class="form-control" />
                <span asp-validation-for="Order.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.InternalNote" class="control-label"></label>
                <input asp-for="Order.InternalNote" class="form-control" />
                <span asp-validation-for="Order.InternalNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* asp-for is not correct, adjust for future *@
                <select asp-for="Options" asp-items="Model.Options" class="form-control">Options:</select>
            </div>
            <div class="form-group">
                @foreach (var item in Model.Items)
                {
                    <div>
                        <input type="checkbox" name="selectedItems" value="@item.Id" />
                        @item.Name
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
